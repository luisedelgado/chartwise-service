    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker-compose Remote Attach: FastAPI app",
            "type": "debugpy",
            "request": "attach",
            "connect": {
              "host": "localhost",
              "port": 5678
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/app"
              }
            ],
            "justMyCode": true
        },
        {
          "name": "Python Debugger: Single File",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "justMyCode": true
        }
    ]
}